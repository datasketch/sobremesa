@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  @font-face {
    font-family: "Source Sans Pro";
    src: url("/fonts/SourceSansPro-Regular.ttf");
    font-weight: 400;
  }
  @font-face {
    font-family: "Source Sans Pro";
    src: url("/fonts/SourceSansPro-Bold.ttf");
    font-weight: 700;
  }
  @font-face {
    font-family: "Source Sans Pro";
    src: url("/fonts/SourceSansPro-SemiBold.ttf");
    font-weight: 600;
  }
  @font-face {
    font-family: "Source Serif Pro";
    src: url("/fonts/SourceSerifPro-Bold.ttf");
    font-weight: 700;
  }
  @font-face {
    font-family: "Source Serif Pro";
    src: url("/fonts/SourceSerifPro-SemiBold.ttf");
    font-weight: 600;
  }
  @font-face {
    font-family: "MARTIN";
    src: url("/fonts/MARTIN-Regular.woff");
    font-weight: 400;
  }
  @font-face {
    font-family: "Beth Ellen";
    src: url("/fonts/BethEllen-Regular.ttf");
  }
}

@layer components {
  .container {
    @apply w-full mx-auto md:w-10/12;
  }
  .container-lg {
    @apply w-full mx-auto md:w-11/12;
  }
  .container-md {
    @apply w-full mx-auto md:w-8/12;
  }
  .container-sm {
    @apply w-full mx-auto md:w-6/12;
  }
  .site-link,
  .site-link-white {
    @apply font-bold text-base uppercase tracking-wide inline-block border-b relative pr-10;
  }
  .site-link {
    @apply border-chocolate text-chocolate;
  }
  .site-link-white {
    @apply border-white text-white;
  }
  .site-link:after,
  .site-link-white:after {
    @apply bg-contain bg-center bg-no-repeat absolute top-1/2 right-0 w-10 h-full transform -translate-y-1/2 translate-x-1/3;
    content: '';
  }
  .site-link:after {
    background-image: url("data:image/svg+xml;base64,");
  }
  .site-link-white:after {
    background-image: url("data:image/svg+xml;base64,");
  }
  .numbered-item {
    @apply flex w-6 h-6 font-bold text-lg text-white border border-chocolate leading-none items-center justify-center flex-shrink-0;
  }
  .section-row {
    @apply flex flex-col space-y-12 lg:space-y-0 lg:flex-row;
  }
  .section-row-reverse {
    @apply lg:flex-row-reverse;
  }
  .section-col {
    @apply w-full lg:w-1/2;
  }
  .section-col-inner {
    @apply h-full flex flex-col;
  }
  .section-title {
    @apply uppercase text-6xl font-martin leading-extra-tight lg:text-8xl relative;
  }
  .section-col-title {
    @apply lg:text-7xl lg:leading-extra-tight;
  }
  .section-title-md {
    @apply uppercase text-3xl font-martin lg:text-5xl relative;
  }
  .section-description {
    @apply text-xl lg:text-2xl font-source-serif-pro font-semibold;
  }
  .with-arrow {
    @apply pb-16;
  }
  .with-arrow:after {
    @apply absolute left-0 bottom-0 w-full bg-contain bg-no-repeat h-10;
    content: '';
    background-image: url("data:image/svg+xml;base64,");
  }
  .resource-card {
    @apply border-2 border-darmouth-green px-6 py-4 flex flex-col items-start;
  }
  .resource-body {
    @apply flex-grow mb-6;
  }
  .resource-type {
    @apply font-bold text-darmouth-green;
  }
  .resource-title {
    @apply font-source-serif-pro font-semibold text-2xl leading-none mt-2;
  }
  .resource-source {
    @apply text-lg italic;
  }
  .page-header-container {
    @apply w-full mx-auto sm:w-10/12 lg:w-10/12;
  }
  .page-row {
    @apply flex flex-col space-y-12 md:space-y-0 md:flex-row;
  }
  .page-col {
    @apply w-full md:w-1/2;
  }
  .logo-lg {
    @apply h-8 m-4 md:m-8;
  }
  .logo-md {
    @apply h-16 m-4 md:m-8;
  }
  .logo-sm {
    @apply h-24 m-4 md:m-8;
  }
  .offer {
    background-image: url('../images/offer.svg');
    background-size: contain;
    beckground-position: center;
    background-repeat: no-repeat;
  }
  .accordion-header {
    @apply relative w-full py-2 border-b-2 border-chocolate font-bold text-left text-2xl;
  }
  .accordion-item .accordion-header:after {
    @apply absolute top-1/2 right-0 transform -translate-y-1/2 w-6 h-6 bg-center bg-contain bg-no-repeat;
    content: '';
    background-image: url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIzMCIgaGVpZ2h0PSIzMCI+PGNpcmNsZSBjeD0iMTUiIGN5PSIxNSIgcj0iMTUiIGZpbGw9IiNlYTU3NDUiLz48cGF0aCBmaWxsPSJub25lIiBzdHJva2U9IiNmZmY0ZTciIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLXdpZHRoPSIzIiBkPSJNMTUgOHYxNE04IDE1aDE0Ii8+PC9zdmc+");
  }
  .accordion-item.is-open .accordion-header:after {
    background-image: url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIzMCIgaGVpZ2h0PSIzMCI+PGNpcmNsZSBjeD0iMTUiIGN5PSIxNSIgcj0iMTUiIGZpbGw9IiNlYTU3NDUiLz48cGF0aCBmaWxsPSJub25lIiBzdHJva2U9IiNmZmY0ZTciIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLXdpZHRoPSIzIiBkPSJNOCAxNWgxNCIvPjwvc3ZnPg==");
  }
  .accordion-item .accordion-content {
    @apply py-0 max-h-0 overflow-hidden;
    transition: all 0.3s ease-in;
  }
  .accordion-item.is-open .accordion-content {
    @apply py-12;
    max-height: initial;
  }
  .list-arrow {
    @apply list-none pl-8 space-y-2;
  }
  .list-arrow li {
    @apply relative;
  }
  .list-arrow li:before {
    @apply absolute top-1/2 -left-8 transform -translate-y-1/2 w-8 h-8 bg-center bg-contain bg-no-repeat;
    content: '';
    background-image: url("data:image/svg+xml;base64,");
  }
}
